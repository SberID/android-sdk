<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        app:buttonType="white_type"
        app:buttonText="login_short"
        app:buttonCornerRadius="16dp"
        app:buttonStrokeColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/sberid_button_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:buttonType="white_type"
        app:buttonText="login_short"
        app:buttonCornerRadius="@dimen/corner_small"
        app:layout_constraintBottom_toTopOf="@id/sberid_button_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_5"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        app:buttonType="white_type"
        app:buttonText="continue_on"
        app:buttonCornerRadius="@dimen/corner_large"
        app:layout_constraintBottom_toTopOf="@id/sberid_button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_4"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="20dp"
        app:buttonType="white_type"
        app:buttonText="fill"
        app:buttonCornerRadius="@dimen/corner_large"
        app:layout_constraintBottom_toTopOf="@id/sberid_button_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="20dp"
        app:buttonText="fill"
        app:buttonCornerRadius="@dimen/corner_small"
        app:layout_constraintBottom_toTopOf="@id/sberid_button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button_2"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:buttonText="continue_on"
        app:buttonCornerRadius="@dimen/corner_small"
        app:layout_constraintBottom_toTopOf="@id/sberid_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <sberid.sdk.auth.view.SberIDButton
        android:id="@+id/sberid_button"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>